<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#F9F9F9"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#196F6868">

        <ImageView
            android:id="@+id/imgRowNote"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/imcolor" />

        <TextView
            android:id="@+id/txtNameRowNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/imgRowNote"
            android:text="Trip to San fran"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtDateRowNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/imgRowNote"
            android:text="18/06/12"
            android:textColor="#4A4A4A"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtDescRowNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgRowNote"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="52dp"
            android:paddingBottom="10dp"
            android:text="San fran was one of the coolest places i have ever been all the beautiful sightseeing and â€¦"
            android:textColor="#4D5468"
            android:textSize="13dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>