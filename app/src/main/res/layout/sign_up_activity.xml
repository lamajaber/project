<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:layout_marginRight="13dp"
            android:onClick="closeSignUp"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="50dp"
            android:onClick="SignInActivity"
            android:text="Sign in"
            android:textColor="#1A1824"
            android:textSize="16dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="53dp"
        android:text="Letâ€™s complete  creation
of your Notebooks account"
        android:textColor="#1A1824"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/editU_email"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="20dp"
        android:hint="Enter your email address"
        android:padding="20dp" />

    <EditText
        android:id="@+id/editU_pass"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="numberPassword"
        android:hint="Enter your password"
        android:padding="20dp" />


    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="80dp"
        android:text="By signing up you accept the Terms of
Service and Privacy Policy."
        android:textAlignment="center"
        android:textColor="#1A1824"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16dp" />
</LinearLayout>